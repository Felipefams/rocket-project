{
  "compilerOptions": {
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom",
      "cypress"
    ],
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    // "**/*.test.tsx",
    "./cypress.config.ts",
    "cypress",
    "**/*.cy.tsx",
    // "node_modules",
    // "build",
    // "dist"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}